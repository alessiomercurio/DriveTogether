<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        app:cornerRadius="50dp"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:background="@drawable/custom_border"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    app:srcCompat="@drawable/email"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/emailRegistrazionePlainText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="199dp"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Targa"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    app:srcCompat="@drawable/t"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/nomeRegistrazionePlainText"
                    tools:layout_editor_absoluteX="123dp"
                    tools:layout_editor_absoluteY="266dp"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Marca"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    app:srcCompat="@drawable/t"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/cognomeRegistrazionePlainText"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Modello"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    app:srcCompat="@drawable/calendar"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/dataEditText"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Numero posti"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    app:srcCompat="@drawable/calendar"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/prezzoMacchinaPlainText"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Prezzo"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    app:srcCompat="@drawable/calendar"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/posizioneMacchina"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Posizione della macchina"
                    android:inputType="number" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/registrazioneButton"
            app:cornerRadius="50dp"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="#064F51"
            android:text="Avanti" />
    </LinearLayout>